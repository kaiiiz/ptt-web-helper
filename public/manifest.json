{
  "name": "PTT Web Helper",
  "description": "PTT Web 介面的輔助工具",
  "version": "1.0.0",
  "manifest_version": 3,
  "web_accessible_resources": [
    {
      "resources": [
        "icons/elevator.png",
        "icons/focus.png",
        "icons/fold.png",
        "icons/clear.png"
      ],
      "matches": [
        "https://www.ptt.cc/*"
      ]
    }
  ],
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.ptt.cc/bbs/*/*"
      ],
      "js": [
        "main.js",
        "vendor.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  }
}